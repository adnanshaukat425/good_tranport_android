<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Order"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/heading"
        android:layout_weight="9">

        <GridLayout
            android:id="@+id/main_grid_view_order_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="8">

            <TextView
                android:id="@+id/tv_cargo_type"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Cargo Type:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_cargo_type"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="2"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/tv_container_type"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Container Type:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_container_type"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/tv_container_size"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Container Size:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_container_size"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/tv_weight_unit"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Weight Unit:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_weight_unit"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/tv_cargo_weight"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Cargo Weight:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_cargo_weight"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/tv_cargo_volume"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Cargo Volume:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cargo_volume"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/tv_source_id"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Soucre:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_source_id"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/tv_destination_id"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Destination:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin_destination_id"
                style="@style/edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="10dp"
                android:layout_rowWeight="1"
                android:layout_toRightOf="@id/tv_destination_id"
                android:spinnerMode="dialog" />
        </GridLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/btn_order_next_step"
        style="?android:attr/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_ripple_effect">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_next_arrow"
            android:drawableRight="@drawable/ic_next_arrow"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>