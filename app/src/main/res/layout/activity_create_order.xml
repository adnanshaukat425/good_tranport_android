<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:scrollbars="vertical">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adnanshaukat.myapplication.View.CreateOrderActivity">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Create New Order"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <RelativeLayout
        android:id="@+id/cargo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading">

        <TextView
            android:id="@+id/tv_cargo_type"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cargo Type:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_cargo_type"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_cargo_type">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/container_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cargo_type"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_container_type"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Container Type:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_container_type"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_container_type">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cargo_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_type"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cargo_weight"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cargo Weight:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_cargo_weight"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_cargo_weight">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cargo_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cargo_weight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cargo_volume"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cargo Volume:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_cargo_volume"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_cargo_volume">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weight_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cargo_volume"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weight_unit"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Weight Unit:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_weight_unit"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_weight_unit">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/soucre_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_unit"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_soucre_id"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Soucre:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_source_id"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_soucre_id">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/destination_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soucre_id"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_destination_id"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Destination:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_destination_id"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_destination_id">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/labour_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination_id"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_labour_req"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Labour Required:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/cb_labour_req"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_labour_req"
            android:gravity="right">
        </CheckBox>

        <TextView
            android:id="@+id/tv_labour_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_labour_req"
            android:gravity="right"
            android:paddingRight="40dp"
            android:text="Labour Cost : Rs.200"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labour_req"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_payment_type"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Payment Type:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/lv_payment_type"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_payment_type">
        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/creation_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_type"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_creation_date"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Creation Date:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lv_creation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_creation_date"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/calendar"
            android:gravity="end"
            android:text="20/12/2018"
            android:textAlignment="viewEnd"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creation_date"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_date"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Order Date:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_order_date"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/calendar"
            android:gravity="end"
            android:text="20/12/2018"
            android:textAlignment="viewEnd">
        </TextView>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_placeOrder"
        style="@style/login_margin_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_date"
        android:background="@drawable/button_ripple_effect"
        android:text="Place Order"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>

</RelativeLayout>

</ScrollView>