<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/drawer_linear_padding"
    android:paddingRight="@dimen/drawer_linear_padding"
    android:paddingTop="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_profile_image"
        android:layout_width="100sp"
        android:layout_height="100dp"
        android:src="@drawable/default_profile_image_2"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        app:civ_border_width="0.5sp"
        app:civ_border_color="@color/colorAccent"
        tools:ignore="VectorDrawableCompat"
        />

    <TextView
        android:id="@+id/drawer_t_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:text="Sample Name"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/drawer_t_email"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="smarttrasnport@gmail.com" />

</LinearLayout>
