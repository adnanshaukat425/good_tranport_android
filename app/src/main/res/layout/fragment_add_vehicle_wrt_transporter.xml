<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="Vehicle Number"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_vehicle_et_vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/add_vehicle_spin_container_type"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_vehicle_number"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:spinnerMode="dropdown" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/add_vehicle_spin_container_size"
            style="@style/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_vehicle_spin_container_type"
            android:elevation="3dp"
            android:translationZ="3dp"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btn_add_vehicle"
            android:background="@drawable/button_ripple_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Add"/>

    </RelativeLayout>